<%- include('partials/header') %>

    <div class="chat-container">
      <main class="chat-main">
        <div class="chat-sidebar">
          <h2>Room:
          <p id="room-name">
            <!-- name comes from js DOM -->
          </p></h2>
          <h3> Users</h3>
          <ul id="users">
            <!-- Usernames comes from js DOM <li></li> -->
          </ul>
          <a href="/" class="btn-leave">Leave Room</a>
        </div>
        <div class="chat-messages">
                      <!-- message comes from user here -->
        </div>
      </main>
      <div class="chat-form-container">
        <form id="chat-form">
          <input
            id="msg"
            type="text"
            placeholder="Enter Message"
            required
            autocomplete="off"
          />
          <button class="btn-send"><i class="fas fa-paper-plane"></i> Send</button>
        </form>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.11.0/qs.min.js" integrity="sha512-/l6vieC+YxaZywUhmqs++8uF9DeMvJE61ua5g+UK0TuHZ4TkTgB1Gm1n0NiA86uEOM9JJ6JUwyR0hboKO0fCng==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/main.js"></script>


<%- include('partials/footer') %>